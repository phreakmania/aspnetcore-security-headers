{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "Csp": {
    "ReportOnly": true,
    "ReportUri": "/csp-report",
    "UpgradeInsecureRequests": true,
    "BlockAllMixedContent": true, //Ignored if UpgradeInsecureRequests is true
    "Default": {
      "AllowedSources": [
        "'none'"
      ]
    },
    "Script": {
      "AddNonce": true,
      "AllowUnsafeEval": false,
      "AllowUnsafeInline": false,
      "AllowedSources": [
        "'self'",
        "localhost:1591",
        "localhost:44342",
        "ajax.aspnetcdn.com"
      ],
      //"StrictDynamic": true
    },
    "Style": {
      "AddNonce": true,
      "AllowedSources": [
        "'self'",
        "ajax.aspnetcdn.com"
      ]
    },
    "Img": {
      "AllowedSources": [
        "'self'"
      ]
    },
    "Connect": {
      "AllowedSources": [
        "'self'",
        "ws://localhost:1591",
        "http://localhost:1591"
      ]
    },
    "Font": {
      "AllowedSources": [
        "'self'",
        "ajax.aspnetcdn.com"
      ]
    },
    "Frame": {
      "AllowNone": true
    },
    "Worker": {
      "AllowNone": true
    },
    "BaseUri": {
      "AllowSelf": true
    },
    "Prefetch": {
      "AllowSelf": true
    },
    "RequireSri": {
      "ForScripts": true,
      "ForStyles": true
    }
  },
  "Hpkp": {
    "ReportOnly": true,
    "ReportUri": "/hpkp-report",
    "MaxAgeSeconds": 3600,
    "Pins": [
      "nrmpk4ZI3wbRBmUZIT5aKAgP0LlKHRgfA2Snjzeg9iY="
    ],
    "IncludeSubDomains": false
  },
  "FeaturePolicy": {
    "Camera": {
      "AllowSelf": true
    },
    "Payment": {
      "AllowNone": true
    },
    "Other": {
      "some-new-thing": {
        "AllowNone": true
      }
    }
  }
}
